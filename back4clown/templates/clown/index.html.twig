{% extends 'base.html.twig' %}

{% block title %}Clown index{% endblock %}

{% block body %}
    <h1>Clown index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Pseudo</th>
                <th>Actif</th>
                <th>Homme</th>
                <th>Musicien</th>
                <th>Couleur</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for clown in clowns %}
            <tr>
                <td>{{ clown.id }}</td>
                <td>{{ clown.pseudo }}</td>
                <td>{{ clown.actif ? 'Yes' : 'No' }}</td>
                <td>{{ clown.homme ? 'Yes' : 'No' }}</td>
                <td>{{ clown.musicien ? 'Yes' : 'No' }}</td>
                <td>{{ clown.couleur }}</td>
                <td>
                    <a href="{{ path('app_clown_show', {'id': clown.id}) }}">show</a>
                    <a href="{{ path('app_clown_edit', {'id': clown.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_clown_new') }}">Create new</a>
{% endblock %}
